<form id="{{action}}_products_form" action="{{action}}/products">
  <input type="hidden" name="uuid">
  <div class="field>">
    <label for="{{action}}_products_product_group_id">Grupa:</label>
    <select class="product_groups" id="{{action}}_products_product_group_id" name="product_group_id" required="true">
      <option></option>
    </select>
  </div>
  <div class="field">
    <label for="{{action}}_products_name">Nosaukums:</label>
    <input type="text" id="{{action}}_products_name" name="name" required="true">
  </div>
  <div class="field">
    <label for="{{action}}_products_price">Cena:</label>
    <input type="number" min="0" step="0.01" id="{{action}}_products_price" name="price" required="true">
  </div>
  <div class="field">
    <label for="{{action}}_products_description">Apraksts:</label>
    <textarea id="{{action}}_products_description" name="description"></textarea>
  </div>
  <div class="field">
    <label for="{{action}}_products_special_offer">Specpiedāvājums:</label>
    <input id="{{action}}_products_special_offer" name="special_offer" type="checkbox" value="1">
  </div>
  <div class="field">
    <label for="{{action}}_products_weekdays">Dienas:</label>
    <select id="{{action}}_products_weekdays" name="weekdays" multiple="true" >
      <option></option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
    </select>
  </div>


</form>
<div class="btn_group">
  <button action="{{action}}/products" class="submit" form="{{action}}_products_form"><span class="fa fa-floppy-o fa-4x"></span></button>
  {{#if delete }}
    <button action="delete/products" class="delete"><span class="fa fa-trash fa-4x"></span></button>
  {{/if}}
  <div class="clear"></div>
</div>
