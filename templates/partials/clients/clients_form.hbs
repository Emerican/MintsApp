<form id="{{action}}_clients_form" action="{{action}}/clients">
  <input type="hidden" name="uuid">
  <div class="field">
    <label for="{{action}}_clients_name">Vārds:</label>
    <input type="text" id="{{action}}_clients_name" name="name" required="true">
  </div>
  <div class="field">
    <label for="{{action}}_clients_surname">Uzvārds:</label>
    <input type="text" id="{{action}}_clients_surname" name="surname"  required="true">
  </div>
  <div class="field">
    <label for="{{action}}_clients_phone">Tālrunis:</label>
    <input type="number" name="phone" id="{{action}}_clients_phone">
  </div>
  <div class="field">
    <label for="{{action}}_clients_email">E-Pasts:</label>
    <input type="email" name="email"  id="{{action}}_clients_email">
  </div>
  <div class="field nfc">
    <label for="{{action}}_clients_card_id">ID karte:</label>
    <span class="fa fa-cog fa-5x"></span>
    <input type="hidden" name="card_id" id="{{action}}_clients_card_id">
    <div class="input_val">
    </div>
  </div>
  <div class="field">
    <label for="{{action}}_clients_client_group_id">Grupa:</label>
    <select class="client_groups" id="{{action}}_clients_client_group_id" name="client_group_id" required="true">
      <option></option>
    </select>
  </div>
  <div class="field avatar">
    <label for="{{action}}_clients_avatar">Bilde:</label>
    <input class="add_avatar_button" id="{{action}}_clients_avatar" type="button" value="Take Picture">
  </div>
</form>

<div class="btn_group">
  <button action="{{action}}/clients" class="submit" form="{{action}}_clients_form"><span class="fa fa-floppy-o fa-4x"></span></button>
  {{#if delete }}
    <button action="delete/clients" class="delete"><span class="fa fa-trash fa-4x"></span></button>
  {{/if}}
  <div class="clear"></div>
</div>
