<form id="{{action}}_discounts_form" action="{{action}}/discounts" enctype='multipart/form-data'>
  <input type="hidden" name="uuid">
  <div class="field">
    <label for="{{action}}_discounts_client_group_id">Klientu Grupa:</label>
    <select class="client_groups" id="{{action}}_discounts_client_group_id" name="client_group_id"></select>
  </div>
  <div class="field">
    <label for="{{action}}_discounts_product_group_id">Produktu Grupa:</label>
    <select class="product_groups" id="{{action}}_discounts_product_group_id" name="product_group_id"></select>
  </div>

  <div class="field">
    <label for="{{action}}_discounts_amount">Lielums:</label>
    <input type="number" min="0" max="100" step="1" id="{{action}}_discounts_amount" name="amount"  required="true">
  </div>

  <div class="field">
    <label for="{{action}}_discounts_weekdays">Dienas:</label>
    <select id="{{action}}_discounts_weekdays" name="weekdays" multiple="true" >
      <option></option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
    </select>
  </div>
</form>

<div class="btn_group">
  <button action="{{action}}/discounts" class="submit" form="{{action}}_discounts_form"><span class="fa fa-floppy-o fa-4x"></span></button>
  {{#if delete }}
    <button action="delete/discounts" class="delete"><span class="fa fa-trash fa-4x"></span></button>
  {{/if}}
  <div class="clear"></div>
</div>
